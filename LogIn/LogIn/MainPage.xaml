<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogIn.MainPage">

    <StackLayout>
        <Grid>
            <Image Source="emblema_intec.jpg" WidthRequest="100" HeightRequest="100" Margin="0,100,0,0"/>
        </Grid>

        <StackLayout Padding="30,10,30,10">
            <Entry x:Name="txtUsuario" Placeholder="Usuario" PlaceholderColor="Black" />
            <Entry x:Name="txtContraseña" Placeholder="Contraseña" PlaceholderColor="Black" IsPassword="True"/>
            <Button Text="Iniciar" TextColor="Black" Clicked="Button_Clicked" />
        </StackLayout>
    </StackLayout>

</ContentPage>
